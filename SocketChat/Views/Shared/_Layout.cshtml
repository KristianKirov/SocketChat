<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo.metro.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/kendo.all.min.js")" type="text/javascript"></script>
</head>
<body>
    <script type="text/javascript">
        var dWindow;

        function openDrawingRoom() {
            if (!dWindow) {
                dWindow = $("#drw").kendoWindow({
                    title: "Draw",
                    modal: false,
                    resizable: false,
                    iframe: true,
                    minWidth: 532,
                    minHeight: 570,
                    maxHeight: 570,
                    content: "/DrawingRoom"
                }).data("kendoWindow").center();
            }
            else {
                dWindow.open().center().refresh();
            }
        }
    </script>
    <div class="page">
        <header>
            <div id="title">
                <h1>My Fancy Chat</h1>
            </div>
            <div id="logindisplay">
                @*@Html.Partial("_LogOnPartial")*@
                <br />
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Chat", "Index", "Chat")</li>
                    <li><a href="javascript:void(0)" onclick="openDrawingRoom();">Open Drawing Room</a></li>
                </ul>
            </nav>
        </header>
        <section id="main">
            <div id="drw" style="overflow: hidden;"></div>
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
